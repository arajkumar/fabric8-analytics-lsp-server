{
  "name": "fabric8-analytics-lsp-server",
  "description": "LSP Server for Dependency Analytics",
  "version": "0.0.0-development",
  "author": "Pavel Odvody",
  "contributors": [
    {
      "name": "Michal Srb",
      "email": "michal@redhat.com"
    },
    {
      "name": "Jyasveer Gotta",
      "email": "jgotta@redhat.com"
    },
    {
      "name": "Jaivardhan Kumar",
      "email": "jakumar@redhat.com"
    }
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": "*"
  },
  "keywords": [
    "fabric8-analytics",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric8-analytics/fabric8-analytics-lsp-server.git"
  },
  "dependencies": {
    "request": "^2.79.0",
    "stream-json": "0.6.1",
    "winston": "3.2.1",
    "xml2object": "0.1.2",
    "vscode-languageserver": "^5.3.0-next.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "semantic-release": "^17.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "build-semantic": "npm run clean && node node_modules/typescript/bin/tsc -p . && cp LICENSE package.json README.md output",
    "build": "npm run build-semantic && npm run dist",
    "clean": "rm -Rf ca-lsp-server.tar output/",
    "test": "nyc mocha",
    "semantic-pre": "cp -a node_modules output/ && cp -r ./package.json output/ && cp -r ./package-lock.json output/",
    "semantic-post": "node -p -e \"require('./output/package.json').version\" > output/VERSION && tar cvjf ca-lsp-server.tar --exclude='node_modules/typescript'  -C output/ .",
    "dist": "npm run semantic-pre && npm run semantic-post",
    "semantic-release": "npm run build-semantic && npm run semantic-pre && semantic-release && npm run semantic-post"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "release": {
    "branchs": [
      "master"
    ],
    "debug": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "output"
        }
      ]
    ]
  }
}
